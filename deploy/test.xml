- name: Install and start Nginx on Ubuntu
  hosts: webservers
  become: true
  gather_facts: true

  tasks:
    - name: Update apt cache
      apt:
        update_cache: yes

    - name: Install nginx
      apt:
        name: nginx
        state: present

    - name: Check if nginx service exists
      stat:
        path: /lib/systemd/system/nginx.service
      register: nginx_service_file

    - name: Start and enable nginx with systemd
      systemd:
        name: nginx
        state: started
        enabled: true
      when: nginx_service_file.stat.exists

    - name: Start nginx manually as fallback
      command: nginx
      when: not nginx_service_file.stat.exists
