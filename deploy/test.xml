---
- name: Install and start Nginx on Ubuntu
  hosts: webservers
  become: true
  gather_facts: true

  tasks:
    - name: Update apt cache
      apt:
        update_cache: yes

    - name: Reinstall nginx to ensure service files are registered
      apt:
        name: nginx
        state: latest
        update_cache: yes
        force: yes

    - name: Check if nginx systemd service file exists
      stat:
        path: /lib/systemd/system/nginx.service
      register: nginx_service_file

    - name: Reload systemd daemon (precaution)
      command: systemctl daemon-reload
      when: nginx_service_file.stat.exists

    - name: Start and enable nginx using systemd
      systemd:
        name: nginx
        state: started
        enabled: true
      when: nginx_service_file.stat.exists

    - name: Start nginx manually if systemd unit is missing
      command: nginx
      when: not nginx_service_file.stat.exists
